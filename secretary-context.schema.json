{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/corporate-minute-book/secretary-context.schema.json",
  "title": "Secretary Context",
  "description": "Structured context for AI agents acting as corporate secretary",
  "type": "object",
  "required": ["version", "initialized", "folders", "templates", "registers", "workflows"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "description": "Template version (semver)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "generatedAt": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When this context was generated"
    },
    "initialized": {
      "type": "boolean",
      "description": "Whether the repository has been initialized for a specific corporation"
    },
    "corporation": {
      "type": "object",
      "description": "Corporation-specific details",
      "properties": {
        "name": { "type": ["string", "null"] },
        "federalNumber": { "type": ["string", "null"] },
        "provincialNumber": { "type": ["string", "null"] },
        "incorporationDate": { "type": ["string", "null"], "format": "date" },
        "fiscalYearEnd": { "type": ["string", "null"] },
        "registeredAddress": { "type": ["string", "null"] },
        "jurisdiction": {
          "type": "object",
          "properties": {
            "federal": { "type": "string" },
            "provincial": { "type": "string" }
          }
        },
        "shareStructure": {
          "type": "object",
          "properties": {
            "classes": { "type": "array", "items": { "type": "string" } },
            "unlimited": { "type": "boolean" }
          }
        }
      }
    },
    "folders": {
      "type": "object",
      "description": "Index of repository folders",
      "additionalProperties": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "description": { "type": "string" },
          "subfolders": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        }
      }
    },
    "templates": {
      "type": "array",
      "description": "List of available templates",
      "items": {
        "type": "object",
        "required": ["path", "name", "category"],
        "properties": {
          "path": { "type": "string" },
          "name": { "type": "string" },
          "category": { "type": "string", "enum": ["formation", "governance", "meetings", "capitalization", "finance", "commercial", "meta"] }
        }
      }
    },
    "registers": {
      "type": "array",
      "description": "List of CSV registers",
      "items": {
        "type": "object",
        "required": ["path", "name", "schema"],
        "properties": {
          "path": { "type": "string" },
          "name": { "type": "string" },
          "schema": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "workflows": {
      "type": "object",
      "description": "Workflow definitions with steps and dependencies",
      "additionalProperties": {
        "type": "object",
        "required": ["name", "description", "steps"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "description"],
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "description": { "type": "string" },
                "dependsOn": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      }
    },
    "entryPoints": {
      "type": "object",
      "description": "Key entry point files for different users",
      "properties": {
        "humanSecretary": { "type": "string" },
        "aiSecretary": { "type": "string" },
        "workflows": { "type": "string" },
        "corporationDetails": { "type": "string" }
      }
    },
    "conventions": {
      "type": "object",
      "description": "Naming and formatting conventions",
      "properties": {
        "templatePrefix": { "type": "string" },
        "resolutionFormat": { "type": "string" },
        "meetingFolderFormat": { "type": "string" },
        "dateFormat": { "type": "string" },
        "branchPrefix": { "type": "string" }
      }
    },
    "compliance": {
      "type": "object",
      "description": "Compliance deadlines and requirements",
      "additionalProperties": { "type": "string" }
    }
  }
}
